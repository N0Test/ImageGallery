@model IList<ImageModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div class="col-8">
        <form method="get" >
            <div class="input-group mb-3">
              <button type="submit" class="btn btn-outline-secondary" id="searchBtn"><img width="20px" height="100%" src="~/icons/magnifying-glass-solid.svg"/></button>
              <input type="text" class="form-control" name="q" value="@ViewData["SearchQuery"]" placeholder="What are you looking for?" aria-label="What are you looking for?" aria-describedby="query">
            </div>
        </form>
    </div>
</div>
<div class="row">
    @{
        @foreach(var image in @Model)
        {
            <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
                <a asp-controller="Images" asp-action="Index" asp-route-id="@image.Id">
                    <img src="@image.Url" class="w-100 shadow-1-strong rounded mb-4" alt="@image.Name"/>
                </a>
            </div>
        }
    }
</div>
